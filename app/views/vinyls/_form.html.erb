<%= form_with(model: @vinyl) do |form| %>
  <% if vinyl.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(vinyl.errors.count, "error") %> prohibited this vinyl from being saved:</h2>

      <ul>
        <% vinyl.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%
=begin %>
  <div class="boxContainer">
    <div class="box">
      <%= form.label :DiscogID, 'Discog ID' %>
      <%= form.text_field :DiscogID, size:30 %>
    </div>
    <div class="box">
      <%= button_to "Search", { controller: 'discogs', action: 'show' }, { method: :get, params: {id: @DiscogID} } %>
    </div>
  </div>
<%
=end %>

  <div class="boxContainer">
    <div class="box">
      <%= form.label :artist %>
      <%= form.text_field :artist, size:30 %>
    </div>
    <div class="box">
      <%= form.label :alphabet_artist, 'Alphabet Artist' %>
      <%= form.text_field :alphabet_artist, size:30 %>
    </div>
  </div>

  <div class="boxContainer">
    <div class="field">
      <%= form.label :album %>
      <%= form.text_field :album, size:50 %>
    </div>
    <div class="field">
      <%= form.label :catalog %>
      <%= form.text_field :catalog, size:10 %>
    </div>
  </div>

  <div class="field">
    <%= form.label :spotify %>
    <%= form.text_field :spotify, size:60 %>
  </div>

  <div class="boxContainer">
    <div class="box">
      <%= form.label :year %>
      <%= form.number_field :year %>
    </div>
    <div class="box">
      <%= form.label :label %>
      <%= form.text_field :label %>
    </div>
  </div>

  <div class="boxContainer">
    <div class="box">
      <%= form.label :genre %>
      <%= form.select :genre, {'Rock': 'Rock', 'Pop': 'Pop', 'Electronic': 'Electronic', 'Hip Hop': 'Hip Hop', 'Funk': 'Funk', 'Jazz': 'Jazz', 'Classic': 'Classic', 'Soundtrack': 'Soundtrack', 'Other': 'Other'} %>
    </div>
    <div class="box">
      <%= form.label :country, 'Country' %>
      <%= form.text_field :country %>
    </div>
  </div>

  <div class="boxContainer">
    <div class="box">
      <%= form.label :size %>
      <%= form.radio_button :size, '12'%>12inch
      <%= form.radio_button :size, '7'%>7inch
    </div>
    <div class="box">
      <%= form.label :compilation %>
      <%= form.radio_button :compilation, 'true' %>Yes
      <%= form.radio_button :compilation, 'false'%>No
    </div>
  </div>

  <div class="field" id="star">
      <%= form.label :star, "Star Evaluation" %>
      <%= form.radio_button :star, 1%>1
      <%= form.radio_button :star, 2%>2
      <%= form.radio_button :star, 3%>3
      <%= form.radio_button :star, 4%>4
      <%= form.radio_button :star, 5%>5
  </div>
  
  <div class="field">
    <%= form.label :review %>
    <%= form.text_area :review, size: "60x10" %>
  </div>
<%
=begin %>
  <div class="songs">
    <div id="detail-association-insertion-point"></div>

    <div class="col-10 mx-auto mt-2">
      <%= link_to_add_association "add song", form, :songs,
      class: "btn btn-secondary btn-block",
      data: {
      association_insertion_node: '#detail-association-insertion-point',
      association_insertion_method: 'after'
      }%>
    </div>
    <div class="mx-auto">
      <%= form.fields_for :songs do |t| %>
        <%= render "song_fields", f: t %>
      <% end %>
    </div>
  </div>
<%
=end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>